{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "skipLibCheck": true,
        "rootDir": "./src",
        "resolveJsonModule": true
      },
      "files": ["./src/models/games.ts", "./src/routes/games.ts", "./src/server.ts", "./src/app.ts", "./src/routes/seller.ts" ],
      "include": ["./"],
      "exclude": [
        "./node_modules",
        "**/*.spec.ts",
        "../node_modules",
        "node_modules",
        "node_modules/**",
        "**/*.d.ts",
        "./node_modules/@types/mongoose/index.d.ts",
        ".\\node_modules\\@types\\**\\*.*"]
}
